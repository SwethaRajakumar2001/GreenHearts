##### Database #####

root:
  contest:
    <contest_id>  
      contest_name: <name>
      creator_username: <username>
      participants:
        <user_id>
          score: <score>
          rank: <rank>      
      message:
         <unique push_id>
            user_id: <user_id>
            username: <username>
            message: <text>
            image: <url>
            nlikes: <num>
            like:
              <user_id> : <0>
            timestamp: <time> date & time
      
      
  user:
    <user_id>
      username: <name>
      nplants: <num>
      plants:
        <plant_id>      
     contests:
        <contest_id>  
          name: <name>
     post:
        <post_id> : <value 0>
     plant:
        <plant_id> : <value>
  
  plant:
    <curruser_id>
      plantname:
      date:
      image:
      
            
  post:
    <post_id>
        user_id: <user_id>
        username: <name>
        message: <text>
        image: <url>
        timestamp: <date & time>
        nlikes: <num>
        like:
          <user_id> : <0>
        ncomment: <num>
        comment:
          <unique_push_id>
            user_id: <user id who commented>
            username: <name>
            content: <text>

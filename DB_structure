##### Database #####

root:
  contest:
    <unique push_id>   
      contest_id: <id> (got from user contests -- look below)
      contest_name: <name>
      creator_username: <username>
      participants:
        <unique push_id>
          image_url: <profile pic>
          email: <email>
          username: <name>
          score: <score>
          rank: <rank>
          nplants: <number>      
      message:
          <unique push_id>
            email: <email>
            username: <username>
            message: <text>
            image: <url>
            nlikes: <num>
            like:
              <unique push_id>
                user_id: <unique push_id>
            timestamp: <time> date & time
      
      
  user:
    <unique push_id>
      username: <name>
      nplants: <num>
      plants:
        <unique push_id>  
          plant_name: <name>
          image: <url>
          timestamp: <date>      
      contests:
        <unique push_id>  (actually used as contest id in contests)
          name: <name>
          id: <id>
      post:
        <unique push_id>
          post_id: <post id> (from below push id in post)
  
  post:
    <unique post_id>
        user_id: <user_id>
        username: <name>
        message: <text>
        image: <url>
        timestamp: <date & time>
        nlikes: <num>
        like:
          <unique push_id>
            user_id: <user who liked his id>
        ncomment: <num>
        comment:
          <unique_push_id>
            user_id: <user id who commented>
            username: <name>
            content: <text>

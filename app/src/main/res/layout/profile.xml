<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:background="@drawable/postgreenbg"
    tools:context=".ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/third"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:id = "@+id/first">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@color/colorLight"
            android:id="@+id/profileimg"
            android:src = "@drawable/ic_baseline_account_circle_24">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textStyle="bold"
                android:id="@+id/user_name"
                android:textColor="@color/colorDark"
                android:textSize="20sp"></TextView>>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:id="@+id/rating"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"></RatingBar>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first"
        android:orientation="vertical"
        android:id="@+id/third"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/seetrees"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tree_ic"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seetreetext"
                android:text="My trees"
                android:layout_margin="10dp"
                android:textColor="@color/colorDark"
                android:textSize="20sp"
                android:textStyle="italic"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/addtrees"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pickimg"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addtreestxt"
                android:text="Add Trees"
                android:textColor="@color/colorDark"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textStyle="italic"></TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/upost"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/third"
        android:layout_marginLeft="30dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/greenheart"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uposttxt"
            android:text="My Post"
            android:layout_margin="10dp"
            android:textColor="@color/colorDark"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/remind"
        app:layout_constraintTop_toBottomOf="@id/upost"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/reminder"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remindtxt"
            android:text="Set Reminder"
            android:layout_margin="10dp"
            android:textColor="@color/colorDark"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
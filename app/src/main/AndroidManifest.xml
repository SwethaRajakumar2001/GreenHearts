<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greenhearts">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Mypost"
            android:label="Mypost"/>
        <activity android:name=".QuestionnaireActivity"
            android:label="Questionnaire"/>

        <activity android:name=".IndContestRoom"/>
        <activity android:name=".FeedActivity"
            android:label="GreenHearts"/>
        <activity android:name=".AddPlants"
            android:label="AddPlants"/>
        <activity android:name=".Myplants"
            android:label="MyTrees"/>
        <activity android:name=".ProfileFragment"
            android:label="Profile"/>
        <activity android:name=".CreateRoomActivity"
            android:label="CreateContest"/>
        <activity android:name=".JoinRoomActivity"
            android:label="JoinContest"/>
        <activity android:name=".ContestRoomsActivity"
            android:label="Contests"/>
        <activity android:name=".PostActivity"
            android:label="MakePost"/>
        <activity android:name=".CommentActivity"
            android:label="Comments"/>
        <activity android:name=".ChatRoom"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".MainActivity"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>